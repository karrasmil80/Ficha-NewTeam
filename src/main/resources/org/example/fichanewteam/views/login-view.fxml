<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <children>
        <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png" />
            </image>
        </ImageView>
        <Label text="Iniciar Sesión" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Usuario:" textFill="WHITE" minWidth="80"/>
                        <TextField fx:id="usuarioField" promptText="Introduce tu usuario" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Contraseña:" textFill="WHITE" minWidth="80"/>
                        <PasswordField fx:id="contrasenaField" promptText="Introduce tu contraseña" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="loginButton" text="Acceder" defaultButton="true" minWidth="120" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Label fx:id="mensajeLabel" text="" textFill="red"/>
    </children>
</VBox>